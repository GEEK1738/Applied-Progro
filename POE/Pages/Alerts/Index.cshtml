@page
@model POE.Pages.Alerts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <style>
        body {
            background-color: orange;
        }

        h1 {
            color: blue;
        }

        p {
            color: red;
        }
    </style>
</head>

<h1>Send Alert</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Alert[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alert[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alert[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Alert) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
