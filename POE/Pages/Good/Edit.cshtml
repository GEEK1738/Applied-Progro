            </div>
            <div class="form-group">
                <label asp-for="Goods.Date" class="control-label"></label>
                <input asp-for="Goods.Date" class="form-control" />
                <span asp-validation-for="Goods.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goods.NumberOfItems" class="control-label"></label>
                <input asp-for="Goods.NumberOfItems" class="form-control" />
                <span asp-validation-for="Goods.NumberOfItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

